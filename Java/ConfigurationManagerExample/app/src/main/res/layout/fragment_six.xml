<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentSix">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/f6_fragment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/dl_primary"
                android:textStyle="bold"
                android:text="@string/fragment_6_title" />


            <HorizontalScrollView
                android:id="@+id/f6_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/f6_fragment_title"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/f6_propertyGroupView"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    android:scrollbars="vertical"
                    android:text="Property Group: " />
            </HorizontalScrollView>

            <Button
                android:id="@+id/f6_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/f6_horizontal_scrollview"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:text="Update" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>