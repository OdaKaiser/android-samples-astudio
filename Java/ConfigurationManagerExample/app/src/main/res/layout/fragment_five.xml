<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentFive">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/f5_fragment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/dl_primary"
                android:textStyle="bold"
                android:text="@string/fragment_5_title"/>
            <TextView
                android:id="@+id/f5_property_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/f5_fragment_title"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="Property" />
            <Spinner
                android:id="@+id/f_5_property_values_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/f5_property_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"/>
            <Button
                android:id="@+id/f5_commit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/f_5_property_values_list"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Commit"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/f5_commit_button">
                <TextView
                    android:id="@+id/f5_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </HorizontalScrollView>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>